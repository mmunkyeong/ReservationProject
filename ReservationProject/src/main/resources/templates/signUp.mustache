   <form name="userInfo" action="/signUp" method="post" th:object="${userDTO}">
		<div>
			<input class="form-control" type="text" name="id" id="id" placeholder="아이디" style="width:300px; margin: auto;">
		</div>
		<div>
			<input class="form-control" type="password" name="password" id="password" placeholder="비밀번호" style="width:300px; margin: auto;">
		</div>
		<div>
		<input class="form-control" type="password" name="password2" id="confirm_password" placeholder="비밀번호 확인" style="width:300px; margin: auto;">
		</div>
		<div>
			<input class="form-control" type="text" name="name" placeholder="이름" style="width:300px; margin: auto;" >
		</div>
		 <div style="text-align: center;">
		<button type="submit" class="btn btn-light">가입</button>
		<button type="button" class="btn btn-light" onclick="location.href='/home';">취소</button>
		</div>
 
<script>
var form=document.userInfo;
var id=form.id.value;

var password = document.getElementById("password")
, confirm_password = document.getElementById("confirm_password");

function validatePassword(){
if(password.value != confirm_password.value) {
  confirm_password.setCustomValidity("비밀번호 불일치");
} else {
  confirm_password.setCustomValidity(''); // 오류가 없으면 메시지를 빈 문자열로 설정해야한다. 오류 메시지가 비어 있지 않은 한 양식은 유효성 검사를 통과하지 않고 제출되지 않는다.
}
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>
</form>
